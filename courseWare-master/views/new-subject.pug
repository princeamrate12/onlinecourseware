extends layout

block content
	.container.mx-auto.my-2.row
		form.col-md-8(method="post" action="/newcourse/newsubject")
			.form-group
				label(for="subjectName") Subject Name
				input#subjectName.form-control(name="subjectName" type="text" placeholder="Subject Name")
			.form-group
				label(for="semester") Semester
				select#semester.custom-select(name="semester")
					option(value="1") 1
					option(value="2") 2
					option(value="3") 3
					option(value="4") 4
					option(value="5") 5
					option(value="6") 6
					option(value="7") 7
					option(value="8") 8
			.form-group
				label(for="branch") Branch
				select#branch.custom-select(name="branch")
					option(value="cse") Computer Science
					option(value="ece") Electrical and Electronics Engineering
					option(value="mech") Mechanical Engineering
					option(value="cve") Civil Engineering
					option(value="che") Chemical Engineering
			input#referencesInput(type="hidden" value="[]" name="references")
			input#teachernotesInput(type="hidden" value="[]" name="teachernotes")
			input#practicalsInput(type="hidden" value="[]" name="practicals")
			input#previousyearquestionpapersInput(type="hidden" value="[]" name="previousyearquestionpapers")
			.content
				#references
					div References
					hr
				#teachernotes
					div Teacher Notes
					hr
				#practicals
					div Practicals
					hr
				#previousyearquestionpapers
					div Previous Year Question Paper
					hr
			button.btn.btn-primary(type="submit") Submit
		.col-md-4
			.form-group
				label(for="contentType") Content Type
				select#contentType.custom-select(name="contentType")
					option(value="references") references
					option(value="teachernotes") teachernotes
					option(value="practicals") practicals
					option(value="previousyearquestionpapers") previousyearquestionpapers
			.form-group
				label(for="name") Enter Content Name
				input#name.form-control(type="text" placeholder="Enter Content Name")
			.form-group
				label(for="url") Enter URL
				input#url.form-control(type="url" placeholder="Enter URL")
			button#add.btn.btn-primary Add
	script(src="/javascripts/add-subject.js")
